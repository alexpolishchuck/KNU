#include <iostream>
#include <stdio.h>
#include <locale>
using std::cout;
using std::cin;
using std::endl;
int main()
{
    setlocale(LC_CTYPE, "ukr");
    int A;
    int F;
    double Z;
        do {

            cout << "Введiть ціле число А; 0<А<100, A=";
            cin >> A;
            cout << endl;
            

            if (A < 0
                || A>100 || A < 0) {
                cin.clear();
                
            }
        } while (A < 0
            || A>100 || A < 0);
        F = A / 10;
        Z = A % 10;
    
    double sum = F + Z;
    double dob = F * Z;
    cout << "сума цифр =" << sum << endl;
    cout << "добуток цифр =" << dob << endl;
        
        return 0;
    }
