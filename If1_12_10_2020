//функція в checkSign.cpp


#include <iostream>
#include<math.h>

using std::cout;
using std::cin;
void checksign(int n)
{
	
	bool flag(n > 0);
	if (flag)
		cout << (n = n + 1);

	else
		cout << n;
}

