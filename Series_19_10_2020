//функція в Libfor.cpp
void biggernumber(int K)
{
	int number(1);
	while (number != 0)
	{
		cout << "enter number:";
		cin >> number;
		cout << endl;
		if (number > K)
			cout << "Number is bigger than K" << endl;
		else
		{
			system("cls");
			cout << "Number is smaller than K or equal to K" << endl;
		}

	}
}
//заголовок в Libfor.h
