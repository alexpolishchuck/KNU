#include "iostream"
#include <cmath>
using namespace std;
int main()
{
	double R1;
	double R2;
	double R3;
	double π = 3.14;
	double S1;
	double S2;
	double S3;
	cout << "vvedit' R1= " << endl;
	cin >> R1 ;
	cout << "vvedit' R2= " << endl;
	cin >> R2;
	if (R1 <= R2)
		cout << "Vvedit' chuslo R1>R2";
	if (R1 > R2)
    S1= π * pow(R1, 2);
	S2 = π * pow(R2, 2);
	R3 = R1 - R2;
	S3 = S1 - S2;
	cout << "Ploshcha S1=" << S1 << endl;
	cout << "Ploshcha S2=" << S2 << endl;
	cout << "radius R3=" << R3 << endl;
	cout << "Ploshcha S3=" << S3;
return 0;
}
