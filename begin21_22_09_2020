#include "iostream"
#include<cmath>
#include <clocale>
using std::cout;
using std::cin;
using std::endl;
int main()
{
	setlocale(LC_ALL, "Ukrainian_Ukraine.1251");
	float x1;
	float x2;
	float x3;
	float y1;
	float y2;
	float y3;
	float length1;
	float length2;
	float length3;
	double p;
	double s;
	double P;
	do {
		cout << "Введiть координату х1 =";
		cin >> x1;
		cout << std::endl;
		cout << "Введiть координату y1 =";
		cin >> y1;
		cout << std::endl;
		cout << "Введiть координату х2 =";
		cin >> x2;
		cout << std::endl;
		cout << "Введiть координату y2 =";
		cin >> y2;
		cout << std::endl;
		cout << "Введiть координату х3 =";
		cin >> x3;
		cout << std::endl;
		cout << "Введiть координату y3 =";
		cin >> y3;
		cout << std::endl;





		length1 = sqrt(pow((x2 - x1), 2) + pow((y2 - y1), 2));
		length2 = sqrt(pow((x3 - x2), 2) + pow((y3 - y2), 2));
		length3 = sqrt(pow((x1 - x3), 2) + pow((y1 - y3), 2));
		if (length1 + length2 <= length3
			or
			length2 + length3 <= length1
			or
			length1 + length3 <= length2) {
			cout << endl;
			cout << "Координати не пiдходять, оберiть iншi:" << endl;
			cin.clear();


		}
	} while (length1 + length2 <= length3
		or
		length2 + length3 <= length1
		or
		length1 + length3 <= length2);

	P = length1 + length2 + length3;
	p = (length1 + length2 + length3)/2;
	s = sqrt(p * (p - length1) * (p - length2) * (p - length3));
	cout << "Периметр P=" << P << endl;
	cout << "Площа S=" << s << endl;
	return 0;
}
